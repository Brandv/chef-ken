<div id='new-user-form-wrapper'>
  <h3 class='errors'><%= flash[:alert]  %><h3>

  <% if @errors %>
    <ul>
    <% @errors.each do |error| %>
      <li><%=error  %></li>
    <% end %>
    </ul>
  <% end %>
<%= form_for @user, url: login_path  do |f|%>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>
<%= f.submit "Log in!", class: "button" %>
<% end %>
</div>
